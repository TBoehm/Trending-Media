<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/container"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".MainActivity" tools:ignore="MergeRootFrame" android:animateLayoutChanges="true"
    android:visibility="visible">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.toboehm.trendingmedia.activities.fragments.TrendsFragment"
        android:id="@+id/ma_trends_fragment"
        tools:layout="@layout/fragment_trends" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.toboehm.trendingmedia.activities.fragments.MediaFragment"
        android:id="@+id/ma_media_fragment"
        android:layout_below="@+id/ma_trends_fragment"
        android:layout_centerHorizontal="true"
        tools:layout="@layout/fragment_media" />

</RelativeLayout>
